# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 4

[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2

[*.{sh}]
end_of_line = lf

[.husky/*]
end_of_line = lf
