{
  "name": "fullstack-bun",
  "version": "1.0.0",
  "description": "Curated web app project template with emphasis on developer experience and type safety. Bun/Elysia backend, React frontend, Socket.IO and TanStack Query bridging the gap.",
  "author": "Chris Leveille <cdleveille@gmail.com>",
  "license": "MIT",
  "type": "module",
  "module": "src/server/index.ts",
  "scripts": {
    "prepare": "bun run lefthook.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "tsc": "tsc -p tsconfig.json",
    "build": "bunx --bun vite build && bun run src/server/helpers/workbox.ts",
    "compile": "bun build --compile --minify --sourcemap --bytecode --target bun --outfile main src/server/index.ts ",
    "deploy": "flyctl deploy --remote-only --detach --no-cache --config fly.toml",
    "dev": "concurrently --prefix \"[{name}]\" --names \"server,client\" -c \"bgBlue.bold,bgGreen.bold\" \"bun run --hot src/server/index.ts\" \"bunx --bun vite\"",
    "start": "bun run src/server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@elysiajs/eden": "^1.3.2",
    "@evilmartians/lefthook": "^1.11.12",
    "@tanstack/react-query": "^5.75.7",
    "@types/bun": "latest",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "workbox-cli": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.1",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.0",
    "elysia": "^1.3.1",
    "elysia-helmet": "^2.0.0",
    "socket.io": "^4.8.1"
  }
}
